package exercicios;
/* Escreva  um sistema que leia três números
 * inteiros e positivos (A, B, C) e calcule a seguinte expressão: 
 * D = (R+S)/2  onde R=(A+B)² e S=(B+C)²*/

import java.util.Scanner;
public class ex4 {

	public static void main(String[] args) {
		int a,b,c,res_s,res_d,res_r;
		Scanner ler = new Scanner(System.in);
		System.out.println("Escreva 3 números inteiros e positivos:");
		
		a=ler.nextInt();
		b=ler.nextInt();
		c=ler.nextInt();
		
		res_r = ((a+b)*(a+b));
		res_s = ((b+c)*(b+c));
		res_d = (res_r + res_s)/2;

		System.out.println("O resultado da equação é: "+res_d);
	}

}

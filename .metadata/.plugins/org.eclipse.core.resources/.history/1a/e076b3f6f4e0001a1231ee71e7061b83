package teste;

import java.util.Scanner;

public class cinema {

	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		String vetor[] = new String[10];
		int num_sele;
		int x;

		vetor[0] = "a1";
		vetor[1] = "a2";
		vetor[2] = "a3";

		System.out.println("Qual assento deseja comprar?");
		num_sele = ler.nextInt();
		
		
		
		for(x=0;x<9;x++)
		{
			if(vetor[num_sele+1].isBlank()==false)
			{
				System.out.println("Já comprado!");
			}
			else if(vetor[x].isBlank()==true)
			{
				//pergunta se quer comprar 
				System.out.println("Deseja comprar esse assento?");
				String resp = ler.nextLine();
				
				if(resp == "sim")
				{
					vetor[x] = "vendido";
				}
				
			}
		}
		
		
		
		
	}
}
